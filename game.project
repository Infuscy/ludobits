[project]
title = Ludobits
version = 0.7.6
dependencies = https://github.com/britzl/deftest/archive/master.zip

[bootstrap]
main_collection = /examples/joint/joint.collectionc
render = /ludobits/r/split_screen.renderc

[input]
game_binding = /input/game.input_bindingc

[display]
width = 1280
height = 720

[physics]
scale = 0.02
debug = 1
gravity_y = -100

[script]
shared_state = 1

[library]
include_dirs = ludobits

[graphics]
max_debug_vertices = 50000

